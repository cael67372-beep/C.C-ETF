<body>

<h1>C.C ETF</h1>

<div class="container">
    <div id="currentPrice" class="price-box">Loading...</div>
    <canvas id="priceChart" height="120"></canvas>
</div>

<script>
    async function loadPrices() {
        const url = "prices.json?t=" + Date.now();

        try {
            const response = await fetch(url, { cache: "no-cache" });

            if (!response.ok) {
                throw new Error("Network response was not ok");
            }

            const data = await response.json();

            if (!Array.isArray(data)) {
                throw new Error("JSON is not an array");
            }

            const labels = data.map(entry => entry.date);
            const prices = data.map(entry => Number(entry.price));

            const latestPrice = prices[prices.length - 1];
            document.getElementById("currentPrice").innerText =
                "Current Price: $" + latestPrice.toFixed(2);

            const ctx = document.getElementById("priceChart").getContext("2d");

            new Chart(ctx, {
                type: "line",
                data: {
                    labels: labels,
                    datasets: [{
                        label: "C.C ETF Price",
                        data: prices,
                        borderColor: "#58a6ff",
                        backgroundColor: "rgba(88,166,255,0.15)",
                        borderWidth: 3,
                        tension: 0.25,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { labels: { color: "#e6edf3" } }
                    },
                    scales: {
                        x: {
                            ticks: { color: "#e6edf3" },
                            grid: { color: "#30363d" }
                        },
                        y: {
                            ticks: { color: "#e6edf3" },
                            grid: { color: "#30363d" }
                        }
                    }
                }
            });

        } catch (error) {
            console.error("Error loading price data:", error);
            document.getElementById("currentPrice").innerText = "Error loading data";
        }
    }

    loadPrices();
</script>

</body>
</html>

