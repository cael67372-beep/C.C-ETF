<body>

<header>
  <h1>C.C ETF</h1>
  <p>Simulated Exchange-Traded Fund</p>
</header>

<div class="price-box">
  <div>Current Price</div>
  <div class="price" id="currentPrice">$100.00</div>
</div>

<div class="container">
  <canvas id="priceChart" height="120"></canvas>
</div>

<footer>
  <div class="pin-box">
    <input type="password" id="pinInput" placeholder="Enter PIN">
    <button onclick="unlockEditor()">Unlock</button>
  </div>

  <div class="editor" id="editor">
    <h3>Price Editor</h3>
    <input type="number" id="newPrice" placeholder="New Price">
    <button onclick="updatePrice()">Update Price</button>
  </div>
</footer>

<script>
  const PIN = "529052";

  let prices = JSON.parse(localStorage.getItem("cc_prices")) || [100];
  let labels = prices.map((_, i) => `Day ${i + 1}`);

  const priceEl = document.getElementById("currentPrice");

  function updateDisplay() {
    const latest = prices[prices.length - 1];
    priceEl.textContent = `$${latest.toFixed(2)}`;
  }

  const ctx = document.getElementById("priceChart").getContext("2d");
  const chart = new Chart(ctx, {
    type: "line",
    data: {
      labels: labels,
      datasets: [{
        label: "C.C ETF Price",
        data: prices,
        borderColor: "#1f7aff",
        tension: 0.3
      }]
    },
    options: {
      plugins: {
        legend: { display: false }
      },
      scales: {
        x: { display: false },
        y: { ticks: { color: "#aaa" } }
      }
    }
  });

  function unlockEditor() {
    const pin = document.getElementById("pinInput").value;
    if (pin === PIN) {
      document.getElementById("editor").style.display = "block";
      alert("Editor unlocked");
    } else {
      alert("Wrong PIN");
    }
  }

  function updatePrice() {
    const val = parseFloat(document.getElementById("newPrice").value);
    if (!isNaN(val)) {
      prices.push(val);
      labels.push(`Day ${prices.length}`);
      localStorage.setItem("cc_prices", JSON.stringify(prices));

      chart.data.labels = labels;
      chart.data.datasets[0].data = prices;
      chart.update();
      updateDisplay();
    }
  }

  updateDisplay();
</script>

</body>
