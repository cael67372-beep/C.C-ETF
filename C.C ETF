    <meta charset="UTF-8">
    <title>C.C ETF</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #0d1117;
            color: #e6edf3;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #58a6ff;
        }

        .container {
            max-width: 900px;
            margin: auto;
            background: #161b22;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        }

        .price-box {
            background: #238636;
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            font-size: 22px;
            font-weight: bold;
            display: inline-block;
            margin-bottom: 20px;
        }

        canvas {
            margin-top: 20px;
        }
    </style>
